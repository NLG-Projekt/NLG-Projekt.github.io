{% block style %}
    <style>
        .c-ExpertiseItem {
            margin-bottom: 32px;
        }


        .c-ExpertiseItem .c-im .c-ProgressBar__percentage > h3{
            margin-bottom: 0px;
            margin-top: -8px;
        }
        
        .c-ExpertiseItem .c-im {
            display: grid;
            grid-template-columns: 90% auto;
            grid-gap: 32px;
            margin-bottom: 32px;
        }
        .c-ExpertiseItem .c-im .prgbar {
            height: 32px;
            margin-top: -8px;
            background-color: rgb(var(--prim));
            transition: width 3s;
            width: 0%;
        }
        .c-ExpertiseItem .c-im .c-ProgressBar__bottom {
            width: 100%;
            height: 16px;
            background-color: rgb(var(--color-primary-dark));
        }
    </style>
{% endblock %}

{% block body %}
    <div class="c-ExpertiseItem">
        <div class="c-im">
            <div class="c-ProgressBar__bottom">
                <div class="prgbar js-ProgressBarTop" data-percentage="{{ expertise.percentage }}"></div>
            </div>
            <div class="c-ProgressBar__percentage">
                <h3 class="bold">{{ expertise.percentage }}%</h3>
            </div>
        </div>
        <h3 class="color-primary-normal">{{ expertise.headline }}</h3>
    </div>
{% endblock %}
