{% block javascripts %}
    {{ block('javascripts', 'components/form/form.html.twig') }}
{% endblock %}

{% block style %}
    <style>
 .contact {
     background-color: rgb(var(--color-primary-darker));
     padding: 80px;
     min-height: calc(100vh - 160px);
     color:rgb(var(--prim));
}
 @media screen and (max-width: 650px) {
     .contact {
         min-height: max-content !important;
         padding: 16px;
    }
}
 .contact-heading {
     margin-bottom: 4rem;
}
 .contact-element {
     max-width: 1024px;
     display: grid;
     grid-template-columns: 30% auto;
     grid-gap: 8px;
     background-color:rgb(var(--color-primary-darker)) 
}
 .contact-form {
     width: auto;
     padding: 0 32px;
}
 @media screen and (max-width: 1020px) {
     .contact-element {
         display: flex;
         flex-direction: column;
    }
     .contact-text {
         margin-bottom: 4rem;
    }
     .contact-form {
         padding: 0;
    }
}
 .contact-form input[type="text"], .contact-form input[type="email"], .contact-form input[type="tel"], .contact-form input[type="password"], .contact-form textarea {
     color: white;
     background-color: rgb(var(--color-primary-darker));
     border: 1px solid rgb(var(--prim));
     padding: 8px;
     border-radius: 4px;
     box-shadow: none;
}
 .contact-form input[type="text"]:focus, .contact-form input[type="email"]:focus, .contact-form input[type="tel"]:focus, .contact-form input[type="password"]:focus, .contact-form textarea:focus {
     outline: 2px solid rgb(var(--prim));
     box-shadow: none;
}
 .contact-form input[type="text"]::placeholder, .contact-form input[type="email"]::placeholder, .contact-form input[type="tel"]::placeholder, .contact-form input[type="password"]::placeholder, .contact-form textarea::placeholder {
     color: rgba(255, 255, 255, 0.7);
}
 @media screen and (max-width: 650px){
     .contact {
         min-height: max-content !important;
         padding: 16px;
    }
     .contact-form {
         padding: 0;
    }
     .contact-text {
         padding: 0 16px;
    }
}</style>

    {{ block('style', 'components/form/form.html.twig') }}
{% endblock %}

{% block body %}
<section id="contact" class="contact">
    <h2 class="bold color-primary-light contact-heading">KONTAKT</h2>
    <div class="contact-element">
        <span class="contact-text">
            <p class="light color-primary-normal">
                Hier k√∂nnen Sie in Kontakt mit mir treten:
            </p>
        </span>
        <span id="form" class="contact-form">
            {% form_theme form 'form/contact_form.html.twig' %}
            {{ form(form) }}

            {% include 'components/flash_message.html.twig' with {'id': 'contact'} %}
        </span>
    </div>
</section>
{% endblock %}
