{% block style %}
    <style>
    .contact {
    background-color: rgb(var(--color-primary-darker));
    padding: 80px;
    min-height: calc(100vh - 160px);
    color: rgb(var(--prim));
    display: flex;
    justify-content: center;
    align-items: center;
}

.contact-heading {
    margin-bottom: 4rem;
    font-size: 2rem; /* Slightly larger heading */
}

.contact-element {
    max-width: 1024px;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 2fr; /* Adjust grid to make the form section larger */
    grid-gap: 32px;
    background-color: transparent; /* Keep background transparent */
}

.contact-text {
    font-size: 1.2rem; /* Increase text size for better readability */
    line-height: 1.6;
    margin-bottom: 4rem;
}

.contact-form {
    width: 100%;
    padding: 0;
}

.contact-form input[type="text"], 
.contact-form input[type="email"], 
.contact-form input[type="tel"], 
.contact-form input[type="password"], 
.contact-form textarea {
    color: white;
    background-color: rgb(var(--color-primary-darker));
    border: 1px solid rgb(var(--prim));
    padding: 12px 16px; /* Increase padding for better spacing */
    margin-bottom: 16px; /* Add space between form elements */
    width: 100%; /* Make input fields take full width */
    border-radius: 6px; /* Slightly rounder corners */
    box-shadow: none;
    font-size: 1rem;
}

.contact-form textarea {
    min-height: 150px; /* Increase height of textarea */
}

.contact-form input:focus, 
.contact-form textarea:focus {
    outline: 2px solid rgb(var(--prim));
    box-shadow: none;
}

.contact-form input::placeholder, 
.contact-form textarea::placeholder {
    color: rgba(255, 255, 255, 0.7);
}

/* Button Styling */
.contact-form button {
    background-color: transparent;
    border: 2px solid rgb(var(--prim));
    color: rgb(var(--prim));
    padding: 12px 24px;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.contact-form button:hover {
    background-color: rgb(var(--prim));
    color: rgb(var(--color-primary-darker));
}

/* Responsive adjustments */
@media screen and (max-width: 1020px) {
    .contact-element {
        grid-template-columns: 1fr; /* Stack on smaller screens */
    }

    .contact-form {
        padding: 0;
    }
}

@media screen and (max-width: 650px) {
    .contact {
        padding: 16px;
        min-height: max-content !important;
    }

    .contact-text {
        padding: 0 16px;
    }

    .contact-form {
        padding: 0;
    }

    .contact-form input, .contact-form textarea {
        padding: 10px;
    }

    .contact-form button {
        width: 100%; /* Full-width button on mobile */
    }
}

</style>

    {{ block('style', 'components/form/form.html.twig') }}
{% endblock %}

{% block body %}
<section id="contact" class="contact">
    <div class="contact-element">
        <span class="contact-text">
    <h2 class="bold color-primary-light contact-heading">KONTAKT</h2>
            <p class="light color-primary-normal">
                Hier k√∂nnen Sie in Kontakt mit mir treten:
            </p>
        </span>
        <span id="form" class="contact-form">
            {% form_theme form 'form/contact_form.html.twig' %}
            {{ form(form) }}

            {% include 'components/flash_message.html.twig' with {'id': 'contact'} %}
        </span>
    </div>
</section>
{% endblock %}
