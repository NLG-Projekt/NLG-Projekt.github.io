{% block style %}
    <style>
        .download {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            font-weight: bold;
            border-radius: 5px;
        }

        .download:hover {
            background-color: #0056b3;
        }
        .btn {
    padding: 16px;
    border-radius: var(--border-radius-button);
    font-family: var(--font-family-base);
    border: none;
    cursor: pointer;
}
.btn-primary {
    background-color: rgb(var(--color-primary-darker));
    color: rgb(var(--prim));
    border-radius: 2px;
    border-color: rgb(var(--prim));
}

    </style>
{% endblock %}


{% block body %}
    {% set flash_types = ['success', 'danger'] %}

    {% for flash_type in flash_types %}
        {% for message in app.flashes([id, '-', flash_type]|join) %}
            <div class="alert alert-{{ flash_type }}">
                {{ message }}
                <a href="https://drive.google.com/uc?export=download&id=1-70W9Z6258B5BpbYWf5zbeEHc99Svd_l" class="download btn btn-primary">Lebenslauf Herunterladen</a>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}
