{% block style %}
    <style>
        .hobby {
            background-color: rgb(var(--color-primary-darker));
            padding: 80px;
        }

        .hobby-element {
            display: flex;
            justify-content: flex-end; /* Karten werden nach rechts ausgerichtet */
        }

        .hobby-cards {
            display: flex;
            flex-wrap: wrap; /* Karten umbrechen, falls kein Platz mehr ist */
            gap: 32px; /* Abstand zwischen den Karten */
            width: 100%;
            justify-content: flex-end; /* Karten bleiben rechts, auch bei mehr als einer Zeile */
        }

        .card {
            background-color: rgb(var(--color-primary-darker));
            padding: 20px;
            width: 250px; /* Feste Breite, um Layoutverschiebungen zu vermeiden */
            height: 350px; /* Feste Höhe für gleichmäßige Karten */
            border-left: 2px solid transparent;
            border-bottom: 2px solid transparent;
            transition: border 0.3s ease, transform 0.3s ease; /* Weicher Übergang für Hover-Effekte */
            position: relative;
        }

        .card:hover {
            border-left: 8px solid rgb(var(--prim)); /* Hellblauer Rand links beim Hover */
            border-bottom: 8px solid rgb(var(--prim)); /* Hellblauer Rand unten beim Hover */
            transform: translateY(-5px); /* Karte schwebt leicht */
        }

        @media screen and (max-width: 1020px) {
            .hobby-element {
                display: flex;
                flex-direction: column;
                align-items: center; /* Karten zentriert bei kleinen Bildschirmen */
            }

            .hobby-cards {
                justify-content: center; /* Karten zentrieren, wenn der Bildschirm kleiner ist */
            }
        }

        @media screen and (max-width: 650px) {
            .hobby-element {
                flex-direction: column;
            }

            .hobby-cards {
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {% set hobbies = [
        {'headline': 'Mechatronik',
        'content': 'In meiner Freizeit verbringe ich gerne viel Zeit in der Werkstat und baue dinge wie Quads und kleine Roboter',
        'icon': 'svg/3117187-200.svg'},
        {'headline': 'Handball',
        'content': 'Ich spiele gerne und viel Handball. Ich spiele bei EGB und in der Oberliga. Außerdem spiele ich im Herrenbereich.',
        'icon': 'svg/6836874.svg'},
        {'headline': 'Fahrrad ',
        'content': 'Ich fahre gerne und viel Fahrrad. Gerade auch in meiner Freizeit, ob Mountainbike, Rennrad oder Selbstgebautes E-bike.',
        'icon': 'svg/71422.svg'},
        {'headline': 'Programmieren',
        'content': 'In der Schule, sowie auch in meiner Freizeit, bereitet mir das Programmieren mit PHP, CSS und Python viel Freude.',
        'icon': 'svg/div-coding-icon.svg'}
    ] %}

    <section id="hobby" class="hobby">
        <h2 class="h3">Hobbys</h2>
        <div class="hobby-element">
            <span class="hobby-cards">
                {% for item in hobbies %}
                    <div class="card">
                        <img src="{{ item.icon }}" alt="{{ item.headline }}" style="width: 50px; height: 50px;">
                        <h3>{{ item.headline }}</h3>
                        <p>{{ item.content }}</p>
                    </div>
                {% endfor %}
            </span>
        </div>
    </section>
{% endblock %}
