{% block style %}
    <style>
        .home {
            width: 100%;
            height: 100%;
        }

        .home-element {
            background-image: url({{ asset('img/Profilpicture.jpg') }});
            background-size: cover;        
            padding: 72px 32px 0;
            height: calc(100vh - 72px);
            display: flex;
            justify-content: center;
            align-items: center; /* Center vertically */
            flex-direction: column; /* Stack elements vertically */
        }

        .element--text {
            text-align: center; /* Center text */
        }

        .social-media {
            margin-top: 20px; /* Add spacing if you add social links */
        }

        .download {
            padding: 10px 20px; /* Add padding */
            border: none; /* Remove default border */
            border-radius: 5px; /* Rounded corners */
            cursor: pointer; /* Pointer cursor */
            transition: background-color 0.3s; /* Smooth transition */
        }

        .download:hover {
            background-color: #0056b3; /* Change on hover */
        }

        @media screen and (max-width: 1020px) {
            .home-element {
                padding: 50px 20px; /* Adjust padding for smaller screens */
            }
        }
        @media screen and (max-width: 1360px) {
            /* Add additional styles if needed */
        }
    </style>
{% endblock %}

{% block body %}
    <section id="home" class="home">
        <div class="home-element">
            <h1 class='text-uppercase text-center'>Emil Kuehnen</h1>
            {% if showDownloadButton %}
                <a href="{{ path('downloadCv', {'hash': hash}) }}" download>
                    <button type="button" class="download btn btn-primary bold">Bewerbung herunterladen</button>
                </a>
            {% endif %}
            <div class="social-media">
                <!-- Add social media links here if needed -->
            </div>
        </div>
    </section>
{% endblock %}
