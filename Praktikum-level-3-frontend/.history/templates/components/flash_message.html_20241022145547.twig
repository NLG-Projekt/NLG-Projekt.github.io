{% block style %}
    <style>
        .btn {
            padding: 16px; /* Adjusted padding */
            border-radius: var(--border-radius-button);
            font-family: var(--font-family-base);
            border: 2px solid; /* Added solid border */
            cursor: pointer;
            background-color: rgb(var(--prim)); /* Added background color */
            color: white; /* Set text color for visibility */
        }
        .btn-primary {
            color: white; /* Ensure text is visible */
            border-radius: 2px;
            border-color: rgb(var(--prim));
            background-color: rgb(var(--prim)); /* Ensure button has a background */
        }
    </style>
{% endblock %}

{% block body %}
    {% set flash_types = ['success', 'danger'] %}

    {% for flash_type in flash_types %}
        {% for message in app.flashes([id, '-', flash_type]|join) %}
            <div class="alert alert-{{ flash_type }}">
                {{ message }}
                <a href="https://drive.google.com/uc?export=download&id=1-70W9Z6258B5BpbYWf5zbeEHc99Svd_l">
                    <button type="button" class="download btn btn-primary">Bewerbung herunterladen</button>
                </a>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

