    <p>ein Unternehmen möchte über deine Landingpage in Kontakt mit dir treten.</p>
    <ul>
        <li>Name: {{ name }}</li>
        <li>Email: <a href="mailto:{{ from }}">{{ from }}</a></li>
        <li>Nachricht:
            <br>
            <span>{{ message }}</span>
        </li>
        <li>
        Lebenslauf download Passwort:
            <br>
            <span>{{ randompassword }}</span>
        </li>
    </ul>
{% endblock %}
{% set randomPassword = [] %}
{% set alpha = 'abcdefghijklmnopqrstuvwxyz' %}
{% set numbers = '0123456789' %}

{% for i in 1..10 %}
    {% set randomCharacter = random(alpha ~ alpha|upper ~ numbers ~ '-_') %}
    {% set randomPassword = randomPassword|merge([randomCharacter]) %}
{% endfor %}
{% set randomPassword = randomPassword|join %}


